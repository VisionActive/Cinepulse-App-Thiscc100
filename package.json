{
  "name": "cinepulse-app",
  "version": "1.3.1",
  "author": "Thiscc100",
  "description": "Cinepulse desktop application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder -w"
  },
  "build": {
    "appId": "cc.cinepulse.app",
    "productName": "Cinepulse",
"files": [
  "main.js",
  "preload.js",
  "ui.html",
  "ui.css",
  "ui.js",
  "splash.html",
  "error.html",
  "lottie.min.js",
  "cinepulse_logo_anim.json",
  "build/**"
  ],
  "win": {
    "icon": "build/icon.ico",
    "target": "nsis"
  },
  "mac": {
    "icon": "build/icon.icns",
    "target": "dmg"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  }
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.0.0"
  }
}
